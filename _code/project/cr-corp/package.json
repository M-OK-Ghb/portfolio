{
  "name": "cr_corp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "run-p server watch:css watch:ejs watch:ts watch:image",
    "build": "run-s build:clean build:css build:ts build:image build:copy build:ejs build:autoprefixer ",
    "release": "run-s release:clean release:css release:autoprefixer release:ts release:image release:copy release:ejs",
    "server": "browser-sync start --config configs/bs.config.js",
    "watch:ejs": "watch \"run-s build:ejs\" ./src/ejs",
    "watch:css": "watch \"run-s build:css build:autoprefixer\" ./src/sass",
    "watch:ts": "webpack --config configs/webpack.dev.config.js",
    "watch:image": "onchange './src/images' -e '**/*.DS_Store' -- npm run build:image",
    "build:clean": "rimraf build",
    "build:ejs": "node tasks/ejs.js",
    "build:css": "sass src/sass:build/css --no-source-map && cleancss -o ./build/css/style.css ./build/css/**/*.css --format beautify --compatibility '*'",
    "build:autoprefixer": "postcss build/**/style.css --map inline -u autoprefixer -o build/css/style.css",
    "build:image": "cpx \"src/images/**/*\" build/images",
    "build:copy": "cpx \"src/copy/**/*\" build",
    "build:ts": "webpack --config configs/webpack.build.config.js",
    "release:clean": "rimraf release",
    "release:ejs": "node tasks/ejs.js --mode release",
    "release:css": "sass src/sass:release/css --no-source-map && cleancss -o ./release/css/style.css ./release/css/**/*.css --compatibility '*'",
    "release:autoprefixer": "postcss release/css/style.css -u autoprefixer --no-map -o release/css/style.css ",
    "release:image": "node tasks/imagemin.js",
    "release:copy": "cpx \"src/copy/**/*\" build",
    "release:ts": "webpack --config configs/webpack.release.config.js",
    "postinstall": "yarn build"
  },
  "author": "monsterdive inc.",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.26.12",
    "clean-css-cli": "^4.3.0",
    "command-line-args": "^5.1.1",
    "cpx2": "^3.0.0",
    "cssnano": "^4.1.10",
    "ejs": "^3.1.5",
    "fs": "^0.0.1-security",
    "glob": "^7.1.6",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.0",
    "imagemin-svgo": "^8.0.0",
    "make-dir": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "path": "^0.12.7",
    "postcss-cli": "^7.1.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.10",
    "ts-loader": "^8.0.6",
    "tslint": "^6.1.3",
    "tslint-loader": "^3.5.4",
    "typescript": "^4.0.3",
    "uglify-js": "^3.13.10",
    "uglifyjs-folder": "^2.0.0",
    "watch": "^1.0.2",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.1.0",
    "webpack-merge": "^5.2.0"
  },
  "browserslist": [
    "last 2 versions",
    "not ie < 11",
    "Android >= 8",
    "iOS >= 13"
  ],
  "dependencies": {
    "css-loader": "^6.6.0",
    "style-loader": "^3.3.1",
    "swiper": "^7.4.1"
  }
}
